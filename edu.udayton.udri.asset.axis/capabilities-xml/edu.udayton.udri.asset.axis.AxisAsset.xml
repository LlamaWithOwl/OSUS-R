<AssetCapabilities xmlns="capability.asset.core.th.dod.mil" 
productName="Axis Camera" 
description="Plug-in that allows for the operation of Axis Cameras with VAPIX firmware V5.20 and above." 
manufacturer="Axis Communications">
    <modalities value="Imager" description="none"/>
    <digitalMediaCapabilities>
        <encodings>image/jpeg</encodings>
    </digitalMediaCapabilities>
    <commandCapabilities captureData="true" performBIT="false">
        <supportedCommands>GetPanTiltCommand</supportedCommands>
        <supportedCommands>SetPanTiltCommand</supportedCommands>
        <panTilt azimuthSupported="true" elevationSupported="true" bankSupported="false">
            <minAzimuth>-179.99999</minAzimuth>
            <maxAzimuth>180.0</maxAzimuth>
            <minElevation>-20.0</minElevation>
            <maxElevation>90.0</maxElevation>
        </panTilt>
    </commandCapabilities>
</AssetCapabilities>
